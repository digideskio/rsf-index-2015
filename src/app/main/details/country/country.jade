.main__details__country
  .container
    h1(ng-bind-html="'details_about_title' | translate:{ country: country.name() }")
    p.lead(ng-bind-html="'see_detail_on_rsf' | translate:{ url: country.url() }")

    .row
      .col-md-12
        .panel.panel-default
          map(data="mapData", country="selectedCountry", id="map-country",  year="selectedYear")
      .col-md-12
        .main__details__country__lead.lead
          p
            span(ng-bind-html="'country_rank_in_year' | translate:countryRankData")
            br
            {{ 'score_without_exactions' | translate }}&nbsp;
          p
            span.text-muted {{ 'ranking_indicator' | translate }}&nbsp;
            i.fa.fa-fw.fa-arrow-up.text-success-bg(ng-show='countryIndicatorProgression("ranking", 2015) ===  1')
            i.fa.fa-fw.fa-arrow-down.text-danger-bg(ng-show='countryIndicatorProgression("ranking", 2015) === -1')
            span.label(ng-class="countryIndicatorLabel('ranking', 2015)")
              | {{ rank.ranking_2015 - rank.ranking_2014 | positive }}
            | &nbsp;
            small(ng-bind-html="'ranking_in_2014' | translate:{ ranking: rank.ranking_2014 }")

            br
            span.text-muted {{ 'score_indicator' | translate }}&nbsp;
            i.fa.fa-fw.fa-arrow-up.text-success-bg(ng-show='countryIndicatorProgression("score", 2015) ===  1')
            i.fa.fa-fw.fa-arrow-down.text-danger-bg(ng-show='countryIndicatorProgression("score", 2015) === -1')
            span.label(ng-class="countryIndicatorLabel('score', 2015)")
              | {{ rank.score_2015 - rank.score_2014 | positive }}
            | &nbsp;
            small(ng-bind-html="'score_in_2014' | translate:{ score: rank.score_2014 }")

    .main__details__country__detailed
      h3 {{ 'detailed_title' | translate }}
      table.table.table-condensed.table-striped.panel.panel-default
        thead
          tr
            th
            th {{ 'pluralisme' | translate }}
            th {{ 'media_independence' | translate }}
            th {{ 'environment_selfcensorship' | translate }}
            th {{ 'legal_framework' | translate }}
            th {{ 'institutional_transparency' | translate }}
            th {{ 'infrastructures' | translate }}
            th {{ 'exactions' | translate }}
            th {{ 'global_score' | translate }}
        tbody
          tr
            td {{ 'country_note' | translate }}
            td.text-center {{ rank["pluralisme_2015"] }}
            td.text-center {{ rank["media_independence_2015"] }}
            td.text-center {{ rank["environment_and_self_censorship_2015"] }}
            td.text-center {{ rank["legal_framework_2015"] }}
            td.text-center {{ rank["institutional_transparency_2015"] }}
            td.text-center {{ rank["infrastructures_2015"] }}
            td.text-center {{ rank["exactions_2015"] }}
            td.text-center {{ rank["score_2015"] }}
          tr
            td {{ 'avg_zone_note' | translate }}
            td
            td
            td
            td
            td
            td
            td
            td
          tr
            td {{ 'avg_world' | translate }}
            td
            td
            td
            td
            td
            td
            td
            td
    .row
      .col-sm-5
        .main__details__country__position
          h3 {{ 'position_title' | translate }}
          table.table.table-condensed.table-striped.panel.panel-default
            thead
              tr
                th {{ 'year' | translate }}
                th(style='width: 200px') {{ 'position' | translate }}
                th
            tbody.text-center
              tr(ng-repeat="year in positionYears", ng-class='countryIndicatorClass("ranking", year)')
                td.lead {{ year }}
                td
                  strong.lead {{ rank["ranking_" + year] }}
                  | &nbsp;/&nbsp;180
                td.text-right
                  i.fa.fa-fw.fa-arrow-up(ng-show='countryIndicatorProgression("ranking", year) ===  1')
                  i.fa.fa-fw.fa-arrow-down(ng-show='countryIndicatorProgression("ranking", year) === -1')
      .col-sm-7
        .main__details__country__barometer
          h3 {{ 'barometer_title' | translate }}
          .well.well-sm
            .row
              .col-xs-6
                h4 2014
                {{ 'journalists_killed' | translate }}: {{ rank["journalists_killed_2015"] }}<br />
                {{ 'netcitizen_killed' | translate }}: {{ rank["net_citizens_killed_2015"] }}
              .col-xs-6
                h4 2015
