ui-view.main__details
  .container
    h2 {{  'detailed_ranking_title' | translate }}
    p {{  'detailed_ranking_desc' | translate }}
    form.row
        label.col-xs-7
          {{ 'show_country_from_label' | translate }}&nbsp;
          select(ng-model="$parent.selectedZone")
            option(value='')        {{ 'world'  | translate }}
            option(value='africa')  {{ 'africa'  | translate }}
            option(value='america') {{ 'america' | translate }}
            option(value='asia')    {{ 'asia'    | translate }}
            option(value='europe')  {{ 'europe'  | translate }}
        label.col-xs-5
          .input-group
            input.form-control(type='text', ng-model="$parent.selectedName", placeholder='{{ "search_placeholder" | translate }}')
            span.input-group-btn
              button.btn.btn-primary(type='button') {{ 'search_btn' | translate }}

    table.table.table-condensed.table-striped.table-hover.panel.panel-default
      thead
        tr
          th(style="width: 30px") {{ 'rank' | translate }}
          th {{ 'country' | translate }}
          th {{ 'pluralisme' | translate }}
          th {{ 'media_independence' | translate }}
          th {{ 'environment_selfcensorship' | translate }}
          th {{ 'legal_framework' | translate }}
          th {{ 'institutional_transparency' | translate }}
          th {{ 'infrastructures' | translate }}
          th {{ 'exactions' | translate }}
          th {{ 'global_score' | translate }}
      tbody
        tr(ng-repeat='country in ranking | orderBy:countryRank', )
          td.text-center(ng-style="{ background: countryColor(country), color: countryContrast(country) }")
            strong {{ country['ranking_2015'] }}
          td
            a(ui-sref="main.details.country({ country: country.country_code })")
              {{ mapData.country(country).name() | titlecase }}
          td.text-center {{ country["pluralisme_2015"] }}
          td.text-center {{ country["media_independence_2015"] }}
          td.text-center {{ country["environment_and_self_censorship_2015"] }}
          td.text-center {{ country["legal_framework_2015"] }}
          td.text-center {{ country["institutional_transparency_2015"] }}
          td.text-center {{ country["infrastructures_2015"] }}
          td.text-center {{ country["exactions_2015"] }}
          td.text-center {{ country["score_2015"] }}
        tr.warning(ng-hide="ranking.length")
          td(colspan=10).text-center {{ 'no_result' | translate }}


