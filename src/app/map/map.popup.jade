.map__workspace__popup(ng-class="{ 'map__workspace__popup--selected-country': !shoudShowCountryLink() }")
    h4.map__workspace__popup__title {{ country.name( useLanguage() ) }}
    p(ng-bind-html="'country_rank_in_year' | translate:countryRankData")
    .map__workspace__popup__footer(ng-show='shoudShowCountryLink()')
      a.btn.btn-sm.btn-primary(ui-sref='main.details.country({ country: country["country-code"] })', target="{{ countryLinkTarget }}")
        | {{ 'find_out' | translate }}
