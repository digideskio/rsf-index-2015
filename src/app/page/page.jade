ui-view.page
  .container
    ul.list-unstyled
      li(ng-repeat='single in page.all()')
        .media
          a.media-left(ui-sref="highlights.single(single)")
            img.img-thumbnail(ng-src="{{ single.thumbnail || single.picture }}", width="150", alt)
          .media-body
            h3.media-heading
              a(ui-sref="highlights.single(single)")
                {{ single.title }}
            p.lead.text-muted {{ single.description }}
