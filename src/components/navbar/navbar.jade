nav.navbar.navbar-static-top.navbar-inverse(ng-controller='NavbarCtrl')
  .container-fluid
    .navbar-header
      a.navbar-brand(ui-sref='main')
        img(src='http://rsf.org/squelettes/img/{{useLanguage()}}/logo-{{useLanguage()}}.png', height='25', width='auto')

    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(ng-class="{ active: useLanguage() === 'fr' }")
          a(ng-click="useLanguage('fr')")
            {{ "to_french" | translate }}

        li(ng-class="{ active: useLanguage() === 'en' }")
          a(ng-click="useLanguage('en')")
            {{ "to_english" | translate }}

        li(ng-class="{ active: useLanguage() === 'es' }")
          a(ng-click="useLanguage('es')")
            {{ "to_spanish" | translate }}

      ul.nav.navbar-nav
        li(ui-sref-active='active')
          a(ui-sref='main.details')
            {{ "details_nav" | translate }}

        li(ui-sref-active='active')
          a(ui-sref='highlight')
            {{ "highlight_nav" | translate }}

        li(ui-sref-active='active')
          a(ui-sref='themes')
            {{ "themes_nav" | translate }}
