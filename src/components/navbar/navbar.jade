nav.navbar.navbar-static-top.navbar-inverse(ng-controller='NavbarCtrl', ng-show="shoudShowNavbar()")
  .container-fluid
    .navbar-header
      a.navbar-brand(ui-sref='main')
        img(ng-src='http://rsf.org/squelettes/img/{{useLanguage()}}/logo-{{useLanguage()}}.png', height='25', width='auto')

    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li.dropdown(dropdown)
          a.dropdown-toggle(dropdown-toggle)
           | {{ "change_language" | translate }} <span class="caret"></span>
          ul.dropdown-menu
            li(ng-class="{ active: useLanguage() === 'fr' }")
              a(ng-click="useLanguage('fr')")
                {{ "to_french" | translate }}

            li(ng-class="{ active: useLanguage() === 'en' }")
              a(ng-click="useLanguage('en')")
                {{ "to_english" | translate }}

            li(ng-class="{ active: useLanguage() === 'es' }")
              a(ng-click="useLanguage('es')")
                {{ "to_spanish" | translate }}

      ul.nav.navbar-nav
        li(ui-sref-active='active')
          a(ui-sref='main.details')
            {{ "details_nav" | translate }}

        li(ui-sref-active='active')
          a(ui-sref='highlights')
            {{ "highlight_nav" | translate }}

        li(ui-sref-active='active')
          a(ui-sref='themes')
            {{ "themes_nav" | translate }}
